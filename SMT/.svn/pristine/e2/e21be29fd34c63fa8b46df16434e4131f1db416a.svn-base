<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="com.smt.hibernate.CustFeedback" 
    table="customer_feedback"
>

    <id
        name="cust_id"
        type="java.lang.Long"
        column="cust_id"
    >
    
        <generator class="increment" />
    </id>
    
    <property
        name="customer_name"
        type="java.lang.String"
        column="customer_name"
        not-null="true"
        length="20"
    />
    
    <property
        name="email"
        type="java.lang.String"
        column="email"
        not-null="true"
        length="20"
    />
    
    <property
        name="mobile_no"
        type="java.lang.Long"
        column="mobile_no"
        not-null="true"
        length="15"
    />
    
    <property
        name="occupation"
        type="java.lang.String"
        column="occupation"
        not-null="true"
        length="10"
    />
    
    <property
        name="rating"
        type="java.lang.Long"
        column="rating"
       
        length="10"
    />
    
     <property
        name="feedback"
        type="java.lang.String"
        column="feedback"
        not-null="true"
        length="30"
    />
    
    <property
        name="dob"
        type="java.sql.Date"
        column="birthday"
        not-null="true"
        
    />
    
</class>
</hibernate-mapping>
    
    
    