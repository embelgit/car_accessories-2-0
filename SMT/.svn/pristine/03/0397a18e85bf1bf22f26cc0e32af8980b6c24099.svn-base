<class 
    name="com.smt.hibernate.Broker" 
    table="Broker"
>

    <id
        name="pk_broker_id"
        type="java.lang.Long"
        column="pk_broker_id"
    >
    
        <generator class="increment" />
    </id>
    
    <property
        name="firstName"
        type="java.lang.String"
        column="FirstName"
        not-null="true"
        length="20"
    />
    
    <property
        name="middleName"
        type="java.lang.String"
        column="MiddleName"
        not-null="true"
        length="20"
    />
    
    <property
        name="lastName"
        type="java.lang.String"
        column="LastName"
        not-null="true"
        length="15"
    />
    
    <property
        name="accType"
        type="java.lang.String"
        column="AccountType"
        not-null="true"
        length="10"
    />
    
    <property
        name="contactNumber"
        type="java.lang.Long"
        column="ContactNo"
       
        length="10"
    />
    
     <property
        name="address"
        type="java.lang.String"
        column="Address"
        not-null="true"
        length="30"
    />
    
    <property
        name="accNumber"
        type="java.lang.Long"
        column="AccountNo"
        not-null="true"
        length="20"
    />
    
    
</class>
